<aura:component>
	<ui:dialogManager />
	
	<ui:button press="{!c.showDialog}" label="Open Dialog" />
	<ui:dialog aura:id="overlay" clickOutToClose="false"  width="small" title="Overlay Demo" description="This is a demo of the ui:dialog component.">
	<p>Delete this record?</p>
		
		<ui:dialogButtons aura:id="buttons">
			<ui:button label="OK" press="{!c.hideDialog}" />
			<ui:button label="Cancel" press="{!c.hideDialog}" />
		</ui:dialogButtons>
	
	</ui:dialog>	
</aura:component>