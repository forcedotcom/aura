<aura:component model="java://org.auraframework.docs.MenuTestModel">
<div style="margin:20px;">
    <div style="display:inline-block;width:50%;vertical-align:top;">
        <h2>Metadata driven menu</h2>
        <ui:dropdown>
            <ui:menuTriggerLink aura:id="metadatatrigger" label="Snow Resorts"/>
            <ui:menu menuItems="{!m.data}"/>
        </ui:dropdown>
    </div>
</div>
<hr/>
<p/>
<div style="margin:20px;">
    <div style="display:inline-block;width:50%;vertical-align:top;">
        <h2>Metadata driven menu with action</h2>
        <ui:dropdown>
            <ui:menuTriggerLink aura:id="metadataAction" label="Pick a ski place"/>
            <ui:menu menuItems="{!m.places}" menuSelect="{!c.pickPlace}"/>
        </ui:dropdown>
    </div>
</div>
<hr/>
<p/>
<div style="margin:20px;">
    <div style="display:inline-block;width:50%;vertical-align:top;">
        <h2>Retrieving selected values from the menu</h2>
        <ui:dropdown>
            <ui:menuTriggerLink aura:id="metadatatrigger" label="Snow Resorts"/>
            <ui:menu aura:id="myMenu" menuItems="{!m.data}"/>
        </ui:dropdown>
        <p/>
        <ui:button press="{!c.getMenuSelected}" label="Check the selected menu items"/>
        <p><ui:outputText aura:id="result" value="Which items get selected"/>
        </p>
    </div>
</div>
<div style="margin:20px;">
    <div style="display:inline-block;width:50%;vertical-align:top;">
        <h2>Example: custom Image Menu Item</h2>
        <ui:dropdown>
            <ui:menuTriggerLink aura:id="imageTrigger" class="imageLink" label="Tiger"/>
            <ui:menu aura:id="tigerMenu" class="inline" menuItems="{!m.images}" menuSelect="{!c.pickTiger}"/>
        </ui:dropdown>
   </div>
</div>
</aura:component>