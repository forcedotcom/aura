<aura:component>
<div style="padding-bottom:10px;">Single Selection</div>
<ui:inputSelect class="single" aura:id="InputSelectSingle">
        <ui:inputSelectOptionGroup label="Mammal">
            <ui:inputSelectOption text="Tiger"/>
            <ui:inputSelectOption text="Lion" value="true"/>
            <ui:inputSelectOption text="Bear"/>
        </ui:inputSelectOptionGroup>
        <ui:inputSelectOptionGroup label="Insect">
            <ui:inputSelectOption text="Butterfly"/>
            <ui:inputSelectOption text="Dragonfly"/>
            <ui:inputSelectOption text="Emmet" label="Ant"/>
        </ui:inputSelectOptionGroup>
    </ui:inputSelect>
    <br/>
    <div style="padding:10px 0 10px 0;">Multiple Selection</div>
    <ui:inputSelect multiple="true" class="multiple" size="5" aura:id="InputSelectMultiple" updateOn="blur">
        <ui:inputSelectOptionGroup label="Mammal">
            <ui:inputSelectOption text="Tiger"/>
            <ui:inputSelectOption text="Lion" value="true"/>
            <ui:inputSelectOption text="Bear" value="true"/>
        </ui:inputSelectOptionGroup>
        <ui:inputSelectOptionGroup label="Insect">
            <ui:inputSelectOption text="Butterfly"/>
            <ui:inputSelectOption text="Dragonfly"/>
            <ui:inputSelectOption text="Emmet" label="Ant"/>
        </ui:inputSelectOptionGroup>
    </ui:inputSelect>
</aura:component>