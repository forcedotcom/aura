<aura:component extends="ui:input" extensible="true" defaultFlavor="default, input, datetime"
                description="HTML5 date/time picker, used for phone and tablet.">

    <aura:attribute name="timezone" type="String" default="{!$Locale.timezone}" description="The timezone ID, for example, America/Los_Angeles."/>

    <!-- update the value binding on blur, which is the event fired when the date/time picker is dismissed -->
    <aura:set attribute="updateOn" value="blur"/>

    <input aura:id="inputDateTimeHtml"
           id="{!v.domId}"
           class="{!v.class + ' input'}"
           type="datetime-local"
           required="{!v.required}"
           disabled="{!v.disabled}"
           aria-describedby="{!v.ariaDescribedBy}"/>

</aura:component>