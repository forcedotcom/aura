<aura:component extends="ui:output" implements="ui:outputDateComponent" extensible="true" support="GA"
    controller="java://org.auraframework.component.ui.TimeZoneInfoController"
    description="Displays a date, time in a specified or default format based on the user's locale.">
      
    <aura:attribute name="timezone" type="String" default="{!$Locale.timezone}" description="The timezone ID, for example, America/Los_Angeles."/>
    <aura:attribute name="value" type="String" required="true" 
                    description="An ISO8601-formatted string representing a date time."/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:handler name="change" value="{!v.format}" action="{!c.formatChange}"/>
    <aura:handler name="change" value="{!v.langLocale}" action="{!c.langLocaleChange}"/>
    
    <span aura:id="span" class="{!v.class}"></span>
</aura:component>
