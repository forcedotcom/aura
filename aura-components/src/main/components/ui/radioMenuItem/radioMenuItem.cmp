<aura:component extends="ui:menuItem" extensible="true" support="GA" description="â€‹A menu item with a radio button that indicates a mutually exclusive selection and can be used to invoke an action. This component is nested in a ui:menu component.">
    <aura:handler name="click" action="{!c.handleClick}"/>
    <aura:renderIf isTrue="{!v.body.length == 0}">
        <li aura:id="listitem" class="{!v.class}" role="presentation">
            <a aura:id="link" role="menuitemradio"><b></b>{!v.label}</a>
        </li>
        <aura:set attribute="else">
            {!v.body}
        </aura:set>
    </aura:renderIf>
</aura:component>