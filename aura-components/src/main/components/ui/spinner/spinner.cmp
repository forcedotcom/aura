<aura:component description="A spinner that is displayed when the component body is loading." support="BETA">
    <aura:attribute name="isVisible" type="Boolean" default="true" description="Set to false to hide the spinner. The default is &quot;true&quot;"/>
    <aura:registerEvent name="toggle" type="ui:toggleLoadingIndicator" description="The event fired when the spinner is toggled."/>
    <aura:handler name="toggle" action="{!c.toggleSpinner}"/>

    <div aura:id='spinner' role="alert" class="{!v.class + ' spinner ' + (v.isVisible == true ? '': 'hideEl')}">
        <div class="loading">
        	<ui:image class="spinner-img" src="/auraFW/resources/aura/images/spinner.gif" alt="Loading" />
        </div>
    </div>
</aura:component>