<aura:component>
	<div class="container">
	    <ui:menu aura:id="uiMenu" class="checkPositionMenu">
	    	<ui:menuTriggerLink aura:id="menuWithPanelTrigger" label="My Menu"/>
	        <ui:menuList aura:id="menuWithPanel">
	            <ui:actionMenuItem aura:id="menuWithPanelItem1" label="open panel" click="{!c.openPanel}"/>
	        </ui:menuList>
	    </ui:menu>
	</div>
    
    <ui:panelManager2>
		<aura:set attribute="registeredPanels">
		    <ui:panel alias="panel"/>
            <ui:modal alias="modal"/>
        </aura:set>
    </ui:panelManager2>
</aura:component>
