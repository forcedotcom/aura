<aura:component render="client">
    <aura:attribute name="value" type="String[]" description="The list of messages to be displayed."/>
    <aura:attribute name="csccTest" type="Boolean" default="false" description="Flag to render client-side cmp creation iteration" />

    <aura:renderIf isTrue="{!v.csccTest}">
        <aura:iterationCscc items="{!v.value}" var="message">
            {!message}
        </aura:iterationCscc>

        <aura:set attribute="else">
            <aura:iteration items="{!v.value}" var="message">
                {!message}
            </aura:iteration>
        </aura:set>
    </aura:renderIf>

</aura:component>
