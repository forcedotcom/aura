        </profile>
        <profile>
            <id>xephyr</id>
            <activation>
                <property>
                    <name>xephyr</name>
                </property>
            </activation>
            <properties>
                <xdisplay.exec>Xephyr</xdisplay.exec>
                <xdisplay.options>-ac -screen ${xdisplay.size}</xdisplay.options>
            </properties>
        </profile>
        <profile>
            <id>desktop</id>
            <activation>
                <property>
                    <name>desktop</name>
                </property>
            </activation>
            <properties>
                <xdisplay.skip>true</xdisplay.skip>
            </properties>
            <build>
                <pluginManagement>
