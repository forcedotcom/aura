            <id>jarsOnly</id>
            <activation>
                <property>
                    <name>jarsOnly</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <systemProperties>
                                <systemProperty>
                                    <name>aura.home</name>
                                    <value />
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <!-- profile for js code coverage for aura-impl xunit tests -->
        <profile>
            <id>xunit.js.coverage.framework</id>
            <properties>
                <module.name>aura-impl</module.name>
                <xunit.js.testPath>${project.build.directory}/js-coverage/${module.name}/src/test/javascript</xunit.js.testPath>
                <xunit.js.currentModule>${module.name}</xunit.js.currentModule>
                <xunit.js.isStrict>false</xunit.js.isStrict>
                <xunit.js.format>jscover</xunit.js.format>
                <xunit.js.coverage>true</xunit.js.coverage>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.github.tntim96</groupId>
                        <artifactId>jscover-file-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>instrument-javascript-resources</id>
                                <phase>process-test-classes</phase>
                            </execution>
                        </executions>
                        <configuration>
                            <srcDir>${project.parent.basedir}/${module.name}</srcDir>
                            <reportDir>${project.build.directory}/js-coverage/${module.name}</reportDir>
                            <testDirectory>${project.parent.basedir}/${module.name}/src/test</testDirectory>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>com.github.eirslett</groupId>
                        <artifactId>frontend-maven-plugin</artifactId>
                        <configuration>
                            <workingDirectory>${project.parent.basedir}</workingDirectory>
                        </configuration>
                        <executions>
                            <execution>
                                <id>install-node-npm</id>
                                <phase>pre-clean</phase>
                            </execution>
                            <execution>
                                <id>npm-install</id>
                                <phase>pre-clean</phase>
                            </execution>
                            <execution>
                                <id>run-xunit</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <configuration>
                                    <arguments>run --color=false test -- /dependency:./aura-util/src/test/tools/xUnit/dependencies /strict:${xunit.js.isStrict} /output:${xunit.js.format} /verbose:false ${xunit.js.testPath} /coverage:${xunit.js.coverage} /logFile:${project.build.directory}/js-coverage/${xunit.js.currentModule}/jscoverage.json ${xunit.js.testPath}</arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.github.tntim96</groupId>
                        <artifactId>jscover-report-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>generate-cobertura-xml</id>
                                <phase>verify</phase>
                            </execution>
                        </executions>
                        <configuration>
                            <srcDir>${project.parent.basedir}/${module.name}</srcDir>
                            <reportDir>${project.build.directory}/js-coverage/${module.name}</reportDir>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
