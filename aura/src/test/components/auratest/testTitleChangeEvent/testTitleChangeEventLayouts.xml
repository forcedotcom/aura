<aura:layouts default="default">
    <aura:layout name="default" title="this is the default">
        <aura:layoutItem container="ready">default</aura:layoutItem>
    </aura:layout>
    <aura:layout name="emptyTitle" title="">
        <aura:layoutItem container="ready">empty</aura:layoutItem>
    </aura:layout>
    <aura:layout name="noTitle">
        <aura:layoutItem container="ready">no</aura:layoutItem>
    </aura:layout>
    <aura:layout name="stringTitle" title="string title">
        <aura:layoutItem container="ready">string</aura:layoutItem>
    </aura:layout>
    <aura:layout name="exprTitle" title="{!v.titleExpr}">
        <aura:layoutItem container="ready">expr</aura:layoutItem>
    </aura:layout>
    <aura:layout name="funcTitle" title="{!v.titleExpr + ' function'}">
        <aura:layoutItem container="ready">func</aura:layoutItem>
    </aura:layout>
</aura:layouts>
