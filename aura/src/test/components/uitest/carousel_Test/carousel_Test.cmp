<br/><br/>Carousel with Max Pages<br/><br/>
<ui:carousel aura:id="carouselMaxPages" width="450" height="450">
	<aura:set attribute="pageComponents">
		<aura:iteration items="{!m.pageList}" var="page"> 
			<ui:carouselPage>
				{!page}
			</ui:carouselPage>
		</aura:iteration>
	</aura:set>
</ui:carousel>


